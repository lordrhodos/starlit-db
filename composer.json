{
    "name": "starlit/db",
    "type": "library",
    "description": "A lightweight database abstraction layer.",
    "keywords": ["database", "MySQL", "PDO", "ORM"],
    "homepage": "http://github.com/starweb/starlit-db",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Starweb AB"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ext-pdo_mysql": "*",
        "starlit/utils": "~0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "monolog/monolog": "^1.0"
    },
    "autoload": {
        "psr-4": {"Starlit\\Db\\": "src"}
    },
    "suggest": {
        "monolog/monolog": "If you want to use the provided Monolog database logger handler"
    }
}
